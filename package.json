{
	"name": "@onedotprojects/auth",
	"version": "1.0.0",
	"private": true,
	"description": "All-In-One Authorization",
	"keywords": [
		"auth",
		"login",
		"signup",
		"signin",
		"authorization"
	],
	"homepage": "https://auth.onedot.cf",
	"bugs": {
		"url": "https://github.com/onedotprojects/auth/issues/new",
		"email": "1auth.wgyt@gmail.com"
	},
	"license": "MIT",
	"author": "OneDot",
	"main": "src/index.js",
	"scripts": {
		"lint": "echo 'CODE STYLE'; npm run lint:prettier; npm run lint:eslint; npm run lint:typescript; echo GRAMMAR; npm run lint:spellchecker-cli; npm run lint:write_good",
		"lint:eslint": "npx eslint --ignore-pattern .gitignore --fix .",
		"lint:prettier": "npx prettier --ignore-path .gitignore --write .",
		"lint:typescript": "npx typescript --project jsconfig.json",
		"lint:spellchecker-cli": "find . -path ./node_modules -prune -false -o -name '_.md' | xargs -I {} npx spellchecker-cli {} --dictionaries dictionary.txt; npx spellchecker-cli _locales/en_US.json --dictionaries dictionary.txt",
		"lint:write_good": "find . -path ./node_modules -prune -false -o -name '_.md' | xargs -I {} npx write-good --parse {}; npx write-good --parse _locales/en_US.json",
		"start": "node --trace-warnings --harmony src/index.js",
		"start:dev": "npx nodemon --harmony --trace-warnings src/index.js",
		"build:tailwind": "TAILWIND_MODE=build NODE_ENV=production npx postcss src/tailwind.sass -o src/main/style.css"
	},
	"nodemonConfig": {
		"events": {
			"restart": "npx prettier --write $FILENAME"
		},
		"ext": "*",
		"verbose": false
	},
	"prettier": {
		"iniSpaceAroundEquals": true,
		"printWidth": 80,
		"proseWrap": "always",
		"quoteProps": "consistent",
		"tabWidth": 4,
		"trailingComma": "all",
		"useTabs": true,
		"jsdocDescriptionWithDot": true,
		"jsdocPrintWidth": 100,
		"jsxBracketSameLine": false,
		"vueIndentScriptAndStyle": true,
		"overrides": [
			{
				"files": [
					"**.md",
					"**/LICENSE"
				],
				"options": {
					"trailingComma": "es5",
					"proseWrap": "never",
					"parser": "markdown"
				}
			},
			{
				"files": [
					"**.svg",
					"**.html"
				],
				"options": {
					"trailingComma": "es5",
					"parser": "html"
				}
			},
			{
				"files": [
					"**.sass"
				],
				"options": {
					"parser": "scss"
				}
			},
			{
				"files": [
					"**.env",
					"**.replit",
					"**/.tx/config"
				],
				"options": {
					"parser": "ini"
				}
			},
			{
				"files": [
					"**.code-snippets"
				],
				"options": {
					"parser": "json"
				}
			}
		],
		"plugins": [
			"prettier-plugin-jsdoc",
			"prettier-plugin-ini"
		]
	},
	"dependencies": {
		"@replit/database": "^2.0.1",
		"@ultraq/icu-message-formatter": "^0.11.1",
		"accepts": "^1.3.7",
		"atob": "^2.1.2",
		"compression": "^1.7.4",
		"cookie-parser": "^1.4.5",
		"css-mqpacker": "^7.0.0",
		"dotenv": "^10.0.0",
		"express": "^4.17.1",
		"globby": "^11.0.3",
		"highlight.js": "^11.0.1",
		"jsdom": "^16.5.3",
		"live-plugin-manager": "^0.15.1",
		"marked": "^2.0.7",
		"mustache": "^4.2.0",
		"mustache-express": "^1.3.0",
		"node-fetch": "^2.6.1",
		"nodemailer": "^6.6.1",
		"path": "^0.12.7",
		"retronid": "^2.0.0",
		"serve-index": "^1.9.1"
	},
	"devDependencies": {
		"@actions/github": "^5.0.0",
		"@tailwindcss/forms": "^0.3.3",
		"@tailwindcss/typography": "^0.4.0",
		"@types/accepts": "^1.3.5",
		"@types/atob": "^2.1.2",
		"@types/compression": "^1.7.0",
		"@types/cookie-parser": "^1.4.2",
		"@types/express": "^4.17.12",
		"@types/jsdom": "^16.2.10",
		"@types/marked": "^2.0.3",
		"@types/mustache": "^4.1.1",
		"@types/mustache-express": "^1.2.1",
		"@types/node": "14.14.44",
		"@types/node-fetch": "^2.5.10",
		"@types/nodemailer": "^6.4.2",
		"@types/serve-index": "^1.7.30",
		"autoprefixer": "^10.2.6",
		"cssnano": "^5.0.3",
		"eslint": "^7.28.0",
		"eslint-config-prettier": "^8.3.0",
		"eslint-plugin-compat": "^3.9.0",
		"eslint-plugin-html": "^6.1.2",
		"eslint-plugin-jsdoc": "^35.1.3",
		"eslint-plugin-markdown": "^2.2.0",
		"eslint-plugin-node": "^11.1.0",
		"eslint-plugin-optimize-regex": "^1.2.0",
		"eslint-plugin-regexp": "^0.11.0",
		"md-file-tree": "^0.2.0",
		"nodemon": "^2.0.7",
		"postcss": "^8.3.0",
		"postcss-advanced-variables": "^3.0.1",
		"postcss-cli": "^8.3.1",
		"postcss-import": "^14.0.2",
		"postcss-map-get": "^0.3.0",
		"postcss-nested": "^5.0.5",
		"postcss-scss": "^3.0.5",
		"postcss-sort-media-queries": "^3.9.10",
		"prettier": "^2.3.1",
		"prettier-plugin-ini": "^0.3.1",
		"prettier-plugin-jsdoc": "^0.3.22",
		"spellchecker-cli": "^4.5.0",
		"tailwindcss": "^2.1.4",
		"tsc-silent": "^1.2.1",
		"typescript": "^4.2.4",
		"write-good": "^1.0.8"
	},
	"engines": {
		"node": "14.16.1"
	},
	"browserslist": [
		"last 2 versions",
		"not dead",
		"> 0.1% in us",
		"maintained node versions",
		"unreleased versions"
	],
	"postcss": {
		"map": false,
		"parser": "postcss-scss",
		"plugins": {
			"postcss-map-get": {},
			"postcss-import": {},
			"tailwindcss": {},
			"postcss-advanced-variables": {},
			"postcss-nested": {},
			"postcss-sort-media-queries": {},
			"autoprefixer": {},
			"css-mqpacker": {},
			"cssnano": {
				"autoprefixer": true,
				"discardUnused": true,
				"mergeIdents": true,
				"reduceIdents": true,
				"zindex": true
			}
		}
	}
}
