{
	"name": "@onedotprojects/auth",
	"version": "1.0.0",
	"private": true,
	"description": "All-In-One Authorization",
	"keywords": [
		"auth",
		"login",
		"signup",
		"signin",
		"authorization"
	],
	"homepage": "https://auth.onedot.cf",
	"bugs": {
		"url": "https://github.com/onedotprojects/auth/issues/new",
		"email": "1auth.wgyt@gmail.com"
	},
	"license": "MIT",
	"author": "OneDot Projects",
	"main": "src/index.js",
	"scripts": {
		"lint": "echo 'CODE STYLE'; npm run lint:mustaches; npm run lint:prettier; npm run lint:eslint; npm run lint:typescript; echo GRAMMAR; npm run lint:spellchecker-cli; npm run lint:write_good",
		"lint:eslint": "eslint --fix .",
		"lint:prettier": "prettier --ignore-path .gitignore --ignore-path .prettierignore --write .",
		"lint:mustaches": "node --trace-warnings --harmony .github/workflows/mustaches.js",
		"lint:typescript": "tsc --project jsconfig.json",
		"lint:spellchecker": "find . -path ./node_modules -prune -false -o -name '_.md' | xargs -I {} spellchecker {} --dictionaries dictionary.txt; spellchecker-cli _locales/en_US.json --dictionaries dictionary.txt",
		"lint:writegood": "find . -path ./node_modules -prune -false -o -name '_.md' | xargs -I {} writegood --parse {}; write-good --parse _locales/en_US.json",
		"start": "node --trace-warnings --harmony src/index.js",
		"build:tailwind": "TAILWIND_MODE=build NODE_ENV=production postcss src/tailwind.sass -o src/main/style.css"
	},
	"prettier": {
		"iniSpaceAroundEquals": true,
		"printWidth": 80,
		"proseWrap": "always",
		"quoteProps": "consistent",
		"tabWidth": 4,
		"trailingComma": "all",
		"useTabs": true,
		"jsdocDescriptionWithDot": true,
		"jsdocPrintWidth": 100,
		"jsdocSeparateReturnsFromParam": true,
		"jsxBracketSameLine": false,
		"vueIndentScriptAndStyle": true,
		"overrides": [
			{
				"files": [
					"**.md",
					"**/LICENSE"
				],
				"options": {
					"trailingComma": "es5",
					"proseWrap": "never",
					"parser": "markdown"
				}
			},
			{
				"files": [
					"**.svg",
					"**.html",
					"**.xml"
				],
				"options": {
					"trailingComma": "es5",
					"parser": "html",
					"jsxBracketSameLine": true
				}
			},
			{
				"files": [
					"**.sass",
					"**.scss",
					"**.css"
				],
				"options": {
					"parser": "scss"
				}
			},
			{
				"files": [
					"**.env",
					"**.replit",
					"**/.tx/config"
				],
				"options": {
					"parser": "ini"
				}
			},
			{
				"files": [
					"**.code-workspace",
					".code-snippets",
					"**/settings.json",
					"**/launch.json",
					"**/extensions.json",
					"**.jsonc",
					"**.eslintrc",
					"**.eslintrc.json",
					"jsconfig.json"
				],
				"options": {
					"parser": "json5"
				}
			},
			{
				"files": [
					"**.json",
					"**.map",
					"**.jslintrc",
					"**.all-contributorsrc"
				],
				"options": {
					"parser": "json"
				}
			}
		],
		"plugins": [
			"prettier-plugin-jsdoc",
			"prettier-plugin-ini"
		]
	},
	"dependencies": {
		"@replit/database": "^2.0.1",
		"@ultraq/icu-message-formatter": "^0.11.1",
		"accepts": "^1.3.7",
		"atob": "^2.1.2",
		"cheerio": "^1.0.0-rc.10",
		"compression": "^1.7.4",
		"cookie-parser": "^1.4.5",
		"dotenv": "^10.0.0",
		"express": "^4.17.1",
		"globby": "^11.0.3",
		"highlight.js": "^11.0.1",
		"live-plugin-manager": "^0.15.1",
		"marked": "^2.1.3",
		"mustache": "^4.2.0",
		"mustache-express": "^1.3.0",
		"node-fetch": "^2.6.1",
		"nodemailer": "^6.6.1",
		"postcss-functions": "^4.0.2",
		"replace-in-file": "^6.2.0",
		"retronid": "^2.0.0",
		"serve-index": "^1.9.1"
	},
	"devDependencies": {
		"@onedotprojects/eslint-plugin": "*",
		"@tailwindcss/forms": "^0.3.3",
		"@tailwindcss/typography": "^0.4.0",
		"@types/accepts": "^1.3.5",
		"@types/atob": "^2.1.2",
		"@types/cheerio": "^0.22.29",
		"@types/compression": "^1.7.0",
		"@types/cookie-parser": "^1.4.2",
		"@types/express": "^4.17.12",
		"@types/marked": "^2.0.3",
		"@types/mustache": "^4.1.1",
		"@types/mustache-express": "^1.2.1",
		"@types/node": "14.14.44",
		"@types/node-fetch": "^2.5.10",
		"@types/nodemailer": "^6.4.2",
		"@types/serve-index": "^1.7.30",
		"all-contributors-cli": "^6.20.0",
		"autoprefixer": "^10.2.6",
		"css-mqpacker": "^7.0.0",
		"cssnano": "^5.0.6",
		"eslint": "^7.28.0",
		"postcss": "^8.3.0",
		"postcss-advanced-variables": "^3.0.1",
		"postcss-cli": "^8.3.1",
		"postcss-import": "^14.0.2",
		"postcss-map-get": "^0.3.0",
		"postcss-nested": "^5.0.5",
		"postcss-scss": "^4.0.0",
		"postcss-sort-media-queries": "^3.9.10",
		"prettier": "^2.3.2",
		"prettier-plugin-ini": "^0.3.1",
		"prettier-plugin-jsdoc": "^0.3.23",
		"replace-in-file": "^6.2.0",
		"spellchecker-cli": "^4.5.0",
		"tailwindcss": "^2.2.4",
		"typescript": "^4.2.4",
		"write-good": "^1.0.8"
	},
	"engines": {
		"node": ">=14.16.1"
	},
	"browserslist": [
		"last 2 versions",
		"not dead",
		"> 0.1% in us",
		"maintained node versions",
		"unreleased versions"
	],
	"postcss": {
		"map": false,
		"parser": "postcss-scss",
		"plugins": {
			"postcss-map-get": {},
			"postcss-import": {},
			"tailwindcss": {},
			"postcss-advanced-variables": {},
			"postcss-nested": {},
			"postcss-sort-media-queries": {},
			"autoprefixer": {},
			"css-mqpacker": {},
			"cssnano": {
				"autoprefixer": true,
				"discardUnused": true,
				"mergeIdents": true,
				"reduceIdents": true,
				"zindex": true
			}
		}
	}
}
